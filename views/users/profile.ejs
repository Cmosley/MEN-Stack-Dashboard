<%- include('../partials/header') %>

<div id="user-profile">
<div class="card" style="width: 30rem;">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
      <a 
				class="nav-link active"
				id="profileinfo-tab"
				data-toggle="tab"
				href="#profileinfo"
				role="tab"
				aria-controls="profileinfo"
				aria-selected="true"
			>
				My Info
			</a>
    </li>
    <% // This is the info for the 'update' tab %>
    
    <li class="nav-item">
      <a 
				class="nav-link"
				id="updateinfo-tab"
				data-toggle="tab"
				href="#updateinfo"
				role="tab"
				aria-controls="updateinfo"
				aria-selected="false"
			>
				Update Info
			</a>
    </li>
    
  </ul>
  <div class="tab-content" id="myTabContent">
    <div 
			class="tab-pane fade show active"
			id="profileinfo"
			role="tabpanel"
			aria-labelledby="profileinfo-tab"
		>
      <div class="card-body">
          
       
	      <h5 class="card-title">Name: <%= user.name %></h5>
        <p class="card-text"><%= user.storeId.length > 1 ? "Stores:" : "Store:"  %></p>
        <ul>
          <% user.storeId.forEach(store => { %>
            <li><%= store.name %></li> 
          <% }); %>
        </ul>
        <p class="card-text">Email: <%= user.email %></p>
        <p class="card-text">Role: <%= user.role %></p>
      
      </div>
    </div>
    <% // This is the card for the 'update' tab %>
    <div
      class="tab-pane fade"
      id="updateinfo"
      role="tabpanel"
      aria-labelledby="updateinfo-tab"
    >
      <div class="card-body">
        <% // This is where we'll put our 'update' route %>
        <form action="/users/profile?_method=PUT" method="POST">
          <div class="form-row">
            <div class="col-md-4">
              <label for="userAlias">Store: </label>
              <form id="add-store-to-user" action="/users/profile>" method="POST">
                <select name="storeId">
                  <%- stores.map(s => 
                    `<option value="${s._id}">${s.name}</option>`
                  ).join('') %>
                </select>
                <button type="submit" class="btn btn-primary">Add Store</button>
              </form>
            </div>
            <br />
          </div>
          <!-- <div class="form-row">
            <div class="col-md-12">
              <label for="avatarUrl">Avatar Image URL:</label>
              <input
                type="text"
                id="avatarUrl"
                class="form-control"
                name="avatar"
                value="<%= user.avatar %>"
              />
            </div>
          </div> -->
          <div class="form-row">
            <div class="col-md-12">
              <label for="bio">Role:</label>
              <select name='role'>
                <option value="Manager">Manager</option>
              </select>
              
                <%= user.role %>
              </select>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
 </div>
</div>
<%- include('../partials/footer') %>